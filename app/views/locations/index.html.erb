<div class = "container">
  <div class = "page-header">
    <%= link_to "New Location", new_location_path, class: "btn btn-info pull-right" %>
    <h1>Locations</h1>
  </div>


  <table class = "table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Zip Code</th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <td><%= location.address %></td>
        <td><%= location.zipcode %></td>
        <td class = "text-right">
          <%= link_to "Edit", edit_location_path(location), class: "btn btn-info" %>
          <%= link_to "Delete", location, method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
