<div class = "container">

<%= form_for(@location, html: {class: "form-horizontal"}) do |f| %>

  <div class = "form-group">
    <%= f.label :name, class: "col-md-2 control-label" %>
    <div class = "col-md-6">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :address, class: "col-md-2 control-label" %>
    <div class = "col-md-6">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :zipcode, class: "col-md-2 control-label" %>
    <div class = "col-md-6">
      <%= f.text_field :zipcode, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-md-offset-6">
    <input class= "btn btn-primary"<%= f.submit %>
    <%= link_to 'Cancel', locations_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
</div>
