<div class = "container">
  <div class = "page-header">
    <div class = "pull-right">
      <%= link_to "Edit", edit_location_path, class: "btn btn-info" %>
      <%= link_to "Delete", @location, method: :delete, class: "btn btn-danger" %>
    </div>
    <h1><%= @location.name %></h1>
  </div>


  <table class = "table table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Date of Event</th>
        <th>Requires_ID?</th>
      </tr>
    </thead>
    <tbody>
        <% @events.each do |event| %>
        <tr>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.requires_id %></td>
        <td class = "text-right">
          <%= link_to "Edit", edit_location_event_path(@location, event.location_id), class: "btn btn-info"%>
          <%= link_to "Delete", location_event_path(@location, event.location_id), method: :delete, class: "btn btn-danger"%>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
<%= link_to "Create Event", new_location_event_path(@location.id), class: "btn btn-info pull-right" %>
</div>
